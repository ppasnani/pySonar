def main():
    print "Hello, World!"
    transmitChirp = wave.open(ChirpFile, 'r')
    #winsound.PlaySound(ChirpFile, winsound.SND_FILENAME)
    #winsound.PlaySound(transmitChirp.readframes(transmitChirp.getnframes()), winsound.SND_MEMORY)

    p = pyaudio.PyAudio()
    stream = p.open(format=p.get_format_from_width(transmitChirp.getsampwidth()),
                    channels=transmitChirp.getnchannels(),
                    rate=transmitChirp.getframerate(),
                    output=True)
    data = transmitChirp.readframes(Chunk)

    while data != '':
        stream.write(data)
        data = transmitChirp.readframes(Chunk)

    stream.stop_stream()
    stream.close()

    p.terminate()

if __name__ == '__main__':
    main()

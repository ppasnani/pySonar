#!/usr/bin/python -tt

import pyaudio
import wave

ChirpFile = "Sound Files/test_sp.wav"
Chunk = 1024
#Ideal to generate own chirp for ease of autocorrelation
#work on it later
#def chirp():
    #Chirp parameters
